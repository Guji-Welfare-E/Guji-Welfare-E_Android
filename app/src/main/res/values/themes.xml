<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <!-- Base application theme. -->
    <style name="Theme.GujiWelfareE_Android" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">#FF3737</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF6B64</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.GujiWelfareE_Android</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textColor">#F00</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="WarningMessage">
        <item name="android:textColor">#FF2A2A</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">#00BE1E</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="AccountEditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF574F</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowRadius">10.0</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowColor">#40000000</item>
    </style>
</resources>